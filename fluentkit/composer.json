{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
        "fluentkit/repositories": "dev-master",
		"fluentkit/supermodel": "dev-master",
        "fluentkit/user": "dev-master",
		"fluentkit/messages": "dev-master",
		"fluentkit/asset": "dev-master",
		"fluentkit/theme": "dev-master",
		"fluentkit/plugin": "dev-master",
		"humweb/filters": "dev-master",
		"barryvdh/laravel-debugbar": "1.*"
	},
	"autoload": {
		"psr-0": {
        	"FluentKit": "src"
    	},
		"classmap": [
			"database/migrations",
			"database/seeds"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize --force",
            "gulp"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize --force",
			"php artisan debugbar:publish",
            "gulp"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "source"
	},
	"minimum-stability": "stable"
}
