{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
        "fluentkit/repositories": "dev-master",
		"fluentkit/supermodel": "dev-master",
        "fluentkit/user": "dev-master",
		"fluentkit/messages": "dev-master",
		"fluentkit/asset": "dev-master",
		"fluentkit/theme": "dev-master",
		"fluentkit/plugin": "dev-master",
		"humweb/filters": "dev-master",
        "adamwathan/bootforms": "0.2.*",
		"barryvdh/laravel-debugbar": "dev-master"
	},
    "require-dev":{
        "mockery/mockery": "~0.9",
        "phpunit/phpunit": "~4.0" 
    },
	"autoload": {
		"psr-0": {
        	"FluentKit": "src"
    	},
		"classmap": [
			"database/migrations",
			"database/seeds",
            "tests"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
            "php artisan asset:publish",
            "npm install -g bower",
            "bower install --allow-root",
            "gulp"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan asset:publish",
            "npm update",
            "bower update --allow-root",
            "gulp"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "source"
	},
	"minimum-stability": "stable"
}
